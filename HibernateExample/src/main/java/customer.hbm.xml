<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping package="com.sample">
	<class name="Customer" table="customer">
		<id name="id" column="customer_id">
			<generator class="increment"></generator>
		</id>
		<property name="name" column="customer_name"></property>
		<property name="aadhar" column="Aadhar_Number"></property>
		<property name="pan" column="PAN_Number"></property>
		<property name="age" column="customer_age"></property>			
	</class>
</hibernate-mapping>